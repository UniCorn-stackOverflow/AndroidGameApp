<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape"
    tools:context=".lobby"
    android:screenOrientation="landscape">

    <ImageButton
        android:id="@+id/imageButtonPlayer1"
        android:layout_width="89dp"
        android:layout_height="105dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/gamepic"
        android:onClick="onClickP1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButtonPlayer2"
        android:layout_width="89dp"
        android:layout_height="105dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/rainer_pic"
        android:onClick="onClickP2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Message"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Choose your Character"
        android:textAlignment="center"
        android:textColor="#fc038c"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="43dp"
        android:onClick="onClickChoose"
        android:text="Choose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewStatPreview1"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Message"
        app:srcCompat="@drawable/stat_preview_one" />

    <ImageView
        android:id="@+id/imageViewStatPreview2"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Message"
        app:srcCompat="@drawable/stat_preview_two" />

</androidx.constraintlayout.widget.ConstraintLayout>